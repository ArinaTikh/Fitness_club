<Window x:Class="Fitness_club.Know"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fitness_club"
        Background="White"
        
        Title="Know" Height="200" Width="400">
    <Grid Margin="5" Background="#312B69">
        <Grid Margin="5" Background="White" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                
            </Grid.RowDefinitions>
            <TextBox x:Name="nameclient" Margin="0,0,0,100" Grid.Column="0" Grid.Row="0" Background="Silver"  Grid.ColumnSpan="3" Text="Введите имя" FontSize="23" Foreground="#626262" />
            <StackPanel Grid.Column="4" Grid.Row="0" >
                <Button Content="OK" Background="#626262" FontSize="20" FontWeight="Regular" Foreground="White" Height="49" Click="OK_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
